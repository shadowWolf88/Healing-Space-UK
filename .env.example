# Example Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Runtime mode (1 for development, 0 for production)
DEBUG=1

# Required: Security keys
PIN_SALT=your_pin_salt_here
ENCRYPTION_KEY=your_fernet_key_here

# Developer Registration (KEEP SECRET!)
# Required to register the single developer account
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
DEVELOPER_REGISTRATION_KEY=your_secret_developer_key_here

# Required: AI API
GROQ_API_KEY=your_groq_api_key_here
API_URL=https://api.groq.com/openai/v1/chat/completions

# Optional: HashiCorp Vault
VAULT_ADDR=https://vault.example.com
VAULT_TOKEN=your_vault_token_here

# Optional: SFTP Export
SFTP_HOST=sftp.example.com
SFTP_PORT=22
SFTP_USER=username
SFTP_PASS=password
SFTP_PKEY_PATH=/path/to/private/key
SFTP_REMOTE_DIR=/remote/directory

# Optional: Webhook Alerts
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Generate keys with these commands:
# ENCRYPTION_KEY: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# PIN_SALT: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
